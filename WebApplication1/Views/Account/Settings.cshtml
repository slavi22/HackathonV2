
@{
    ViewData["Title"] = "Settings";
}
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">


<h1>Settings</h1>
<div class="d-flex flex-column justify-content-center align-items-center border border-1 me-auto ms-auto" style="width: 15em">
    <div class="form-check d-flex mt-1">
        <input type="checkbox" checked data-toggle="toggle" id="flexCheckDefault">
        <label class="form-check-label ms-2 align-self-center" for="flexCheckDefault">
            Imperial units
        </label>
    </div>
    <div>
        <a class="nav-link" href="#">Change Password</a>
    </div>
</div>

@section Scripts{
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
}

